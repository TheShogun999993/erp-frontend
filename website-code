    <script>
        // --- Portal Navigation ---
        const pages = document.querySelectorAll('[id$="-portal-page"]');
        const farmerRegistrationSection = document.getElementById('farmer-registration-section');
        const farmerManagementSection = document.getElementById('farmer-management-section');

        function showPortal(pageId) {
            pages.forEach(page => {
                page.classList.toggle('hidden', page.id !== pageId);
            });
            // Reset farmer portal to registration view when returning to main menu
            if (pageId === 'main-portal-page') {
                farmerRegistrationSection.classList.remove('hidden');
                farmerManagementSection.classList.add('hidden');
            }
            window.scrollTo(0, 0);
        }

        function adminBypass() {
            console.log('Admin bypass activated.');
            farmerRegistrationSection.classList.add('hidden');
            farmerManagementSection.classList.remove('hidden');
            window.scrollTo(0, 0);
        }

        // --- Shared Functions & Elements ---
        const successModal = document.getElementById('successModal');
        const successMessage = document.getElementById('successMessage');
        const closeModalBtn = document.getElementById('closeModalBtn');
        
        closeModalBtn.addEventListener('click', () => {
             successModal.style.display = 'none';
        });
        
        function handleDosageInput(event) {
            if (event.target.classList.contains('dosage-input')) {
                const input = event.target;
                const warning = input.nextElementSibling;
                const value = parseFloat(input.value);
                warning.classList.toggle('hidden', isNaN(value) || value <= 0.1);
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            // --- Farmer Portal Logic ---
            const registrationForm = document.getElementById('registrationForm');
            registrationForm.addEventListener('submit', (e) => {
                e.preventDefault();
                console.log('Registration successful.');
                // Here you could save registration data
                farmerRegistrationSection.classList.add('hidden');
                farmerManagementSection.classList.remove('hidden');
                window.scrollTo(0, 0);
            });

            const farmerForm = document.getElementById('farmerAmuForm');
            const farmerAddFeedBtn = document.getElementById('farmerAddFeedBtn');
            const farmerFeedContainer = document.getElementById('farmer-feed-amu-container');
            let farmerFeedCount = 0;
            const farmerAddOtherSourceBtn = document.getElementById('farmerAddOtherSourceBtn');
            const farmerOtherContainer = document.getElementById('farmer-other-amu-container');
            let farmerOtherSourceCount = 0;

            function addFarmerFeedEntry() {
                farmerFeedCount++;
                const html = `<div class="p-4 border border-gray-200 rounded-lg bg-white fade-in"><h4 class="font-medium text-gray-800 mb-4">Medicated Feed Record #${farmerFeedCount}</h4><div class="grid grid-cols-1 md:grid-cols-2 gap-4"><div><label class="text-sm text-gray-600">Feed Name/Code</label><input type="text" name="farmerFeedName${farmerFeedCount}" class="w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"></div><div><label class="text-sm text-gray-600">Antimicrobial Used</label><input type="text" name="farmerFeedAmu${farmerFeedCount}" class="w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"></div><div><label class="text-sm text-gray-600">Dosage (e.g., mg/kg)</label><input type="text" name="farmerFeedDosage${farmerFeedCount}" class="dosage-input w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"><p class="text-red-500 text-xs mt-1 hidden">Warning: Value is above the recommended limit of 0.1.</p></div><div><label class="text-sm text-gray-600">Application Start Date</label><input type="date" name="farmerFeedStartDate${farmerFeedCount}" class="w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"></div></div></div>`;
                farmerFeedContainer.insertAdjacentHTML('beforeend', html);
            }
            
            function addFarmerOtherSourceEntry() {
                farmerOtherSourceCount++;
                const html = `<div class="p-4 border border-gray-200 rounded-lg bg-white fade-in"><h4 class="font-medium text-gray-800 mb-4">Other AMU Record #${farmerOtherSourceCount}</h4><div class="grid grid-cols-1 md:grid-cols-2 gap-4"><div><label class="text-sm text-gray-600">Source Type</label><select name="farmerSourceType${farmerOtherSourceCount}" class="w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"><option>Injection</option><option>Bath Treatment</option><option>Topical</option><option>Other</option></select></div><div><label class="text-sm text-gray-600">Antimicrobial Used</label><select name="farmerOtherAmu${farmerOtherSourceCount}" class="w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"><option value="">Select Antimicrobial...</option><option>Oxytetracycline</option><option>Althrocin</option><option>Ampicillin</option><option>Sparfloxacin</option><option>Enrofloxacin</option><option>Acriflavine</option><option>Formalin</option><option>Potassium Permanganate</option><option>Malachite Green</option><option>Tannic Acid</option><option>Other</option></select></div><div><label class="text-sm text-gray-600">Dosage / Concentration</label><input type="text" name="farmerOtherDosage${farmerOtherSourceCount}" class="dosage-input w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"><p class="text-red-500 text-xs mt-1 hidden">Warning: Value is above the recommended limit of 0.1.</p></div><div><label class="text-sm text-gray-600">Application Date</label><input type="date" name="farmerApplicationDate${farmerOtherSourceCount}" class="w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"></div></div></div>`;
                farmerOtherContainer.insertAdjacentHTML('beforeend', html);
            }

            if (farmerAddFeedBtn) {
                addFarmerFeedEntry();
                addFarmerOtherSourceEntry();
                farmerAddFeedBtn.addEventListener('click', addFarmerFeedEntry);
                farmerAddOtherSourceBtn.addEventListener('click', addFarmerOtherSourceEntry);
                farmerFeedContainer.addEventListener('input', handleDosageInput);
                farmerOtherContainer.addEventListener('input', handleDosageInput);
                farmerForm.addEventListener('submit', (e) => {
                    e.preventDefault();
                    console.log('Farmer Form Submitted.');
                    successMessage.textContent = 'Your AMU data has been logged successfully.';
                    successModal.style.display = 'flex';
                    farmerForm.reset();
                });
            }

            // --- Vet Portal Logic ---
            const vetForm = document.getElementById('vetVisitForm');
            const vetAddFeedBtn = document.getElementById('vetAddFeedBtn');
            const vetFeedContainer = document.getElementById('vet-feed-amu-container');
            let vetFeedCount = 0;
            const vetAddOtherSourceBtn = document.getElementById('vetAddOtherSourceBtn');
            const vetOtherContainer = document.getElementById('vet-other-amu-container');
            let vetOtherSourceCount = 0;

            function addVetFeedEntry() {
                vetFeedCount++;
                 const html = `<div class="p-4 border border-gray-200 rounded-lg bg-white fade-in"><h4 class="font-medium text-gray-800 mb-4">Medicated Feed Record #${vetFeedCount}</h4><div class="grid grid-cols-1 md:grid-cols-2 gap-4"><div><label class="text-sm text-gray-600">Feed Name/Code</label><input type="text" name="vetFeedName${vetFeedCount}" class="w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"></div><div><label class="text-sm text-gray-600">Antimicrobial Used</label><input type="text" name="vetFeedAmu${vetFeedCount}" class="w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"></div><div><label class="text-sm text-gray-600">Dosage (e.g., mg/kg)</label><input type="text" name="vetFeedDosage${vetFeedCount}" class="dosage-input w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"><p class="text-red-500 text-xs mt-1 hidden">Warning: Value is above the recommended limit of 0.1.</p></div><div><label class="text-sm text-gray-600">Application Start Date</label><input type="date" name="vetFeedStartDate${vetFeedCount}" class="w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"></div></div></div>`;
                vetFeedContainer.insertAdjacentHTML('beforeend', html);
            }

            function addVetOtherSourceEntry() {
                vetOtherSourceCount++;
                const html = `<div class="p-4 border border-gray-200 rounded-lg bg-white fade-in"><h4 class="font-medium text-gray-800 mb-4">Other AMU Record #${vetOtherSourceCount}</h4><div class="grid grid-cols-1 md:grid-cols-2 gap-4"><div><label class="text-sm text-gray-600">Source Type</label><select name="vetSourceType${vetOtherSourceCount}" class="w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"><option>Injection</option><option>Bath Treatment</option><option>Topical</option><option>Other</option></select></div><div><label class="text-sm text-gray-600">Antimicrobial Used</label><select name="vetOtherAmu${vetOtherSourceCount}" class="w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"><option value="">Select Antimicrobial...</option><option>Oxytetracycline</option><option>Althrocin</option><option>Ampicillin</option><option>Sparfloxacin</option><option>Enrofloxacin</option><option>Acriflavine</option><option>Formalin</option><option>Potassium Permanganate</option><option>Malachite Green</option><option>Tannic Acid</option><option>Other</option></select></div><div><label class="text-sm text-gray-600">Dosage / Concentration</label><input type="text" name="vetOtherDosage${vetOtherSourceCount}" class="dosage-input w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"><p class="text-red-500 text-xs mt-1 hidden">Warning: Value is above the recommended limit of 0.1.</p></div><div><label class="text-sm text-gray-600">Application Date</label><input type="date" name="vetApplicationDate${vetOtherSourceCount}" class="w-full mt-1 p-2 bg-gray-50 border border-gray-300 rounded-md"></div></div></div>`;
                vetOtherContainer.insertAdjacentHTML('beforeend', html);
            }
            
            if (vetAddFeedBtn) {
                addVetFeedEntry();
                addVetOtherSourceEntry();
                vetAddFeedBtn.addEventListener('click', addVetFeedEntry);
                vetAddOtherSourceBtn.addEventListener('click', addVetOtherSourceEntry);
                vetFeedContainer.addEventListener('input', handleDosageInput);
                vetOtherContainer.addEventListener('input', handleDosageInput);
                 vetForm.addEventListener('submit', (e) => {
                    e.preventDefault();
                    console.log('Vet Form Submitted.');
                    successMessage.textContent = 'The visit report has been logged successfully.';
                    successModal.style.display = 'flex';
                    vetForm.reset();
                });
            }
        });
    </script>
</body>
</html>


